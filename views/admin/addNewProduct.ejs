<div class="component">
    <div class="card-body">
        <div class="row d-flex justify-content-between align-items-center">
            <div class="col-md-4 text-center">
                <div class="text-center">
                    <h2 class="font-weight-bold">Welcome To T'Dou</h2>
                    <h4>Best online Shopping platform</h4>
                </div>
                <img src="/images/home-image.png" alt="shopping cart" class="img-fluid">
            </div>
            <div class="col-md-6">
                <div class="card">
                    <div class="card-header text-center">
                        <h4 class="font-weight-bold">Add new Product item</h4>
                    </div>
                    <div class="card-body">
                        <form action="/admin/products/new" method="POST" class="needs-validation" novalidate enctype="multipart/form-data">
                            <div class="validate error text-danger text-center mb-2"></div>
                            <!-- Product name -->
                            <div class="row">
                                <div class="form-group col">
                                    <label class="col-form-label" for="name">Product Name</label>
                                    <input type="text" name="name" id="name" placeholder="Enter a product name" class="form-control" required>
                                    <div class="valid-feedback">Looks good!</div>
                                </div>

                                <!-- product price -->
                                <div class="form-group col">
                                    <label class="col-form-label" for="price">Price</label>
                                    <div class="input-group mb-3">
                                        <span class="input-group-text">â‚±</span>
                                        <input type="number" name="price" placeholder="Enter product price" class="form-control" aria-label="Amount (to the nearest dollar)" required>
                                        <span class="input-group-text">.00</span>
                                        <div class="valid-feedback">Looks good!</div>
                                    </div>
                                </div>
                            </div>

                            <!-- default file chooser  -->
                            <h6 class="my-3 text-center">
                                You can give either a image file or a image link 
                                <br>
                                Choose which type of file
                            </h6>
                            <div class="row">
                                <div class="col-2" id="imageButton">
                                    <input type="button" value="Local file" >
                                </div>
                                <div class="col" id="fileButton">
                                    <input type="button" value="Image Link">
                                </div>
                            </div>
                            <div class="form-group" id="imageFile">
                                <label class="col-form-label" for="image">Choose local file</label>
                                <input type="file" class="form-control" name="image" required/>
                                <div class="valid-feedback">Looks good!</div>                                   
                            </div>
                            <!-- image file link.. online -->
                            <div class="form-group invisible" id="imageLink">
                                <label class="form-label" for="img">Product Image Link</label>
                                <input type="text" id="img" placeholder="Product link" class="form-control" name="img" required/>
                                <div class="valid-feedback">Looks good!</div>
                            </div>
                            <div class="form-group">
                                <label class="col-form-label" for="prodDesc">Product Description</label>
                                <textarea class="form-control" placeholder="Enter product Description" id="desc" rows="4" name="desc" required></textarea>
                                <div class="valid-feedback">Looks good!</div>
                            </div>
                            <div class="form-group">
                                <label for="type" class="col-form-label"><h6>Type of Product</h6></label>
                                    <select class="form-control" aria-label="role" name="type">
                                        <option selected value="Technology">Technology</option>
                                        <option value="Food">Food</option>
                                        <option value="Personal and Heath Care">Personal and Heath Care</option>
                                        <option value="Other">Other</option>
                                    </select>
                            </div>
                            <div class="form-group text-center mt-4">
                                <button type="submit" class="btn btn-success">Submit</button>
                                <a href="/admin" class="btn btn-light">Cancel</a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    document.addEventListener("DOMContentLoaded", () => {
        const imageFile = document.querySelector("#imageFile");
        const imageLink = document.querySelector("#imageLink")
        document.querySelector("#imageButton").addEventListener("click", e => {
            e.preventDefault();
            imageFile.classList.remove("invisible");
            imageLink.classList.add("invisible");
        });
        document.querySelector("#fileButton").addEventListener("click", e => {
            e.preventDefault();
            imageLink.classList.remove("invisible");
            imageFile.classList.add("invisible");
        });
    });
</script>