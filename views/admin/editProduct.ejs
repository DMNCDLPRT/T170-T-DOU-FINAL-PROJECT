<div class="component">
    <div class="card-body">
        <div class="card">
            <div class="card-header text-center">
                <h4>Edit Product</h4>
            </div>
            <div class="card-body">
                <form action="/admin/patchProducts/<%=data._id%>?_method=PATCH" method="POST" class="needs-validation" novalidate enctype="multipart/form-data">
                    <!-- <input type="hidden" name="_method" value="PATCH"> -->
                    <div class="form-outline mb-4">
                        <input type="text" id="name" class="form-control" name="name" value="<%=data.name%>" required/>
                        <label class="form-label" for="name">Product Name</label>
                        <div class="valid-feedback">Looks good!</div>
                        <div class="invalid-feedback">Not a valid name!</div>
                    </div>
                    <div class="form-outline mb-4">
                        <input type="text" id="price" class="form-control" name="price" value="<%=data.price%>" required/>
                        <label class="form-label" for="price">Price</label>
                        <div class="valid-feedback">Looks good!</div>
                        <div class="invalid-feedback">Not a valid price!</div>
                    </div>
                    <div class="form-outline mb-4">
                        <input type="text" id="img" class="form-control" name="img" value="<%=data.img%>" />
                        <label class="form-label" for="img">Product Image Link</label>
                        <div class="valid-feedback">Looks good!</div>
                        <div class="invalid-feedback">Not a valid image link</div>
                    </div>
                    <div class="form-outline mb-5">
                        <input type="file" class="form-control" name="image" id="customFile" />
                        <div class="valid-feedback">Looks good!</div>
                        <div class="invalid-feedback">Not a valid image file!</div>
                    </div>
                    <div class="form-outline mb-4">
                        <textarea class="form-control" id="desc" rows="4" name="desc" required><%= data.desc %> </textarea>
                        <label class="form-label" for="desc">Product Description</label>
                        <div class="valid-feedback">Looks good!</div>
                        <div class="invalid-feedback">Not a valid description!</div>
                    </div>
                    <div class="form-group">
                        <label for="role" class="ms-2"><h6>Type of Product</h6></label>
                            <select class="form-control" aria-label="role" name="type">
                                <option value="Technology">Technology</option>
                                <option value="Food">Food</option>
                                <option value="Personal and Heath Care">Personal and Heath Care</option>
                                <option value="Other">Other</option>
                            </select>
                    </div>
                    <div class="btn-container d-flex flex-column w-50 justify-center m-auto">
                        <button type="submit" class="btn btn-primary mb-4">Save</button>
                        <button type="reset" class="btn btn-primary mb-4">Reset</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
<script>
    (() => {
    'use strict';
  
    // Fetch all the forms we want to apply custom Bootstrap validation styles to
    const forms = document.querySelectorAll('.needs-validation');
  
    // Loop over them and prevent submission
    Array.prototype.slice.call(forms).forEach((form) => {
        form.addEventListener('submit', (event) => {
        if (!form.checkValidity()) {
          event.preventDefault();
          event.stopPropagation();
        }
        form.classList.add('was-validated');
      }, false);
    });
  })();
  
  try{
    var close=document.querySelector(".btn-close");
    setTimeout(()=>{close.click();},3000)
  }
  catch(e){
    console.log("Alert Closed Already")
  }
  
  
  
  </script>