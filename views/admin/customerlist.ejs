<div class="row">
   <div class="list-group col-md-2">
        <a href="#" class="list-group-item active">Dashboard</a>
        <a href="/" class="list-group-item">Home</a>
        <a href="/admin/adminProducts" class="list-group-item">Products</a>
        <a href="/admin/products/new" class="list-group-item">Add New Product</a>
        <a href="/admin/users/orders/all/history" class="list-group-item">Order History</a>
    </div>
    <div class="card col-md p-0">
        <div class="card-header">
            <div class="row">
                <div class="col-8">
                    <h4 class="font-weight-bold mb-0 mt-2">All Customers</h4>
                </div>
                <div class="col-4">
                    <a href="/addCustomer" class="btn btn-outline-primary float-right"><i class="fa fa-plus mr-1"></i>Add New</a>
                </div>
            </div>
        </div>
        <div class="card-body">
            <table class="table table-hover">
                <thead class="table-dark">
                    <tr class="users">
                        <th scope="col">Role</th>
                        <th scope="col">User Name</th>
                        <th scope="col">Email</th>
                        <th scope="col">Phone Number</th>
                        <th scope="col">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    <% if(customers.length > 0) { %>
                        <% for(let customer of customers) { %>
                        <tr id="id_<%= customer._id %>" class="<%= customer.slug %>">
                            <th scope="row"><%= customer.role %></th>
                            <th><%= customer.username %></th>
                            <td><%= customer.email %></td>
                            <td><%= customer.phone %></td>
                            <td>
                                <a href="/admin/updateCustomer/<%= customer._id %>" class="btn btn-sm btn-warning"><i class="fa fa-edit"></i></a>
                                <a href="/admin/deleteCustomer/<%= customer._id %>" class="btn btn-sm btn-danger"><i class="fa fa-trash"></i></a>
                            </td>
                        </tr>
                        <% } %>
                    <% } else { %>
                        <tr>
                            <td>No data found</td>
                        </tr>
                    <% } %>
                </tbody>
                </table>
        </div>
    </div>
</div>