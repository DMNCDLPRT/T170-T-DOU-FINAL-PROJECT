<div class="jumbotron pt-5 pb-5">
    <div class="row">
        <div class="col-8">
            <h4 class="font-weight-bold"><%= customer.username %></h4>
            <p class="lead">Alert! Are you sure you want to delete this Customer?</p>
            <p class="lead">
            <form action="/admin/deleteCustomer/<%= customer._id %>" method="POST">
                <button class="btn btn-danger btn-lg" type="submit">Delete</button>
                <a class="btn btn-light btn-lg" href="/admin">Cancel</a>
            </form>
            </p>
        </div>
        <div class="col-4">
            <h1 class="font-weight-bolder text-danger float-right">
                <i class="fa fa-trash"></i>
            </h1>
        </div>
    </div>    
</div>